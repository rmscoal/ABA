<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.latihanmengejahuruf.RecordAudioActivity">

    <Button
        android:id="@+id/bt_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <Button
        android:id="@+id/bt_stop_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Stop Record"
        app:layout_constraintEnd_toEndOf="@+id/bt_start_record"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_start_record"
        app:layout_constraintTop_toBottomOf="@+id/bt_start_record" />

    <Button
        android:id="@+id/bt_play_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Play Record"
        app:layout_constraintEnd_toEndOf="@+id/bt_stop_record"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bt_stop_record"
        app:layout_constraintTop_toBottomOf="@+id/bt_stop_record" />

</androidx.constraintlayout.widget.ConstraintLayout>